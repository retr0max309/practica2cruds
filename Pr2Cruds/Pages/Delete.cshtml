@page
@model Pr2Cruds.Pages.DeleteModel
@{
    ViewData["Title"] = "Eliminar tarea";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h2 class="h5 m-0"><i class="bi bi-trash"></i> ¿Eliminar esta tarea?</h2>
    </div>
    <div class="card-body">
        <p class="text-secondary mb-3">Esta acción no se puede deshacer.</p>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label small text-secondary">@Html.DisplayNameFor(m => m.Tarea.Nombre)</label>
                <input class="form-control" value="@Model.Tarea?.Nombre" disabled />
            </div>
            <div class="col-md-3">
                <label class="form-label small text-secondary">@Html.DisplayNameFor(m => m.Tarea.FechaVencimiento)</label>
                <input class="form-control" value="@Model.Tarea?.FechaVencimiento" disabled />
            </div>
            <div class="col-md-3">
                <label class="form-label small text-secondary">@Html.DisplayNameFor(m => m.Tarea.IdUsuario)</label>
                <input class="form-control" value="@Model.Tarea?.IdUsuario" disabled />
            </div>
            <div class="col-12">
                <label class="form-label small text-secondary">@Html.DisplayNameFor(m => m.Tarea.Estado)</label>
                <input class="form-control" value="@Model.Tarea?.Estado" disabled />
            </div>
        </div>

        <form method="post" class="mt-4 d-flex gap-2">
            <input type="hidden" asp-for="Tarea.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>
