@page
@model Pr2Cruds.Pages.DetailsModel
@{
    ViewData["Title"] = "Detalles de la tarea";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h2 class="h5 m-0"><i class="bi bi-info-circle"></i> Detalles</h2>
    </div>
    <div class="card-body">
        <div class="list-group list-group-flush">
            <div class="list-group-item">
                <div class="small text-secondary">@Html.DisplayNameFor(m => m.Tarea.Nombre)</div>
                <div class="fw-medium">@Html.DisplayFor(m => m.Tarea.Nombre)</div>
            </div>
            <div class="list-group-item">
                <div class="small text-secondary">@Html.DisplayNameFor(m => m.Tarea.FechaVencimiento)</div>
                <div class="fw-medium">@Html.DisplayFor(m => m.Tarea.FechaVencimiento)</div>
            </div>
            <div class="list-group-item">
                <div class="small text-secondary">@Html.DisplayNameFor(m => m.Tarea.Estado)</div>
                <div class="fw-medium"><span class="badge text-bg-secondary">@Html.DisplayFor(m => m.Tarea.Estado)</span></div>
            </div>
            <div class="list-group-item">
                <div class="small text-secondary">@Html.DisplayNameFor(m => m.Tarea.IdUsuario)</div>
                <div class="fw-medium">@Html.DisplayFor(m => m.Tarea.IdUsuario)</div>
            </div>
        </div>

        <div class="d-flex gap-2 mt-4">
            <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-page="./Index" class="btn btn-outline-secondary">Volver</a>
        </div>
    </div>
</div>
