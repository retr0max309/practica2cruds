@page
@model Pr2Cruds.Pages.CreateModel
@{
    ViewData["Title"] = "Crear tarea";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h2 class="h5 m-0"><i class="bi bi-plus-circle"></i> Nueva tarea</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Tarea.Nombre" class="form-label"></label>
                    <input asp-for="Tarea.Nombre" class="form-control" />
                    <span asp-validation-for="Tarea.Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Tarea.FechaVencimiento" class="form-label"></label>
                    <input asp-for="Tarea.FechaVencimiento" class="form-control" type="date" />
                    <span asp-validation-for="Tarea.FechaVencimiento" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Tarea.IdUsuario" class="form-label"></label>
                    <input asp-for="Tarea.IdUsuario" class="form-control" />
                    <span asp-validation-for="Tarea.IdUsuario" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Tarea.Estado" class="form-label"></label>
                    <input asp-for="Tarea.Estado" class="form-control" />
                    <span asp-validation-for="Tarea.Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check2"></i> Guardar
                </button>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
